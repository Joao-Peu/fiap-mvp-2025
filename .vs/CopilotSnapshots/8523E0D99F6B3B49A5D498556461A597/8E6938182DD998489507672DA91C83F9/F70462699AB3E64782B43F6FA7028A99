using FIAPCloudGames.Domain.Entities;
using System.Collections.Generic;
using System.Linq;

namespace FIAPCloudGames.Application.Services
{
    public class UserService
    {
        private static readonly List<User> _users = new();

        // No momento, apenas simula persistência. Depois será integrado ao repositório/EF.
        public User Register(string name, string email, string password)
        {
            var user = new User(name, email, password);
            _users.Add(user);
            return user;
        }

        public IEnumerable<User> GetAll() => _users;

        public User? GetById(Guid id) => _users.FirstOrDefault(u => u.Id == id);

        public User? Update(Guid id, string name, string email, string password)
        {
            var user = GetById(id);
            if (user == null) return null;
            // Atualiza os campos usando métodos da entidade
            try
            {
                typeof(User).GetMethod("SetName", System.Reflection.BindingFlags.NonPublic | System.Reflection.BindingFlags.Instance)!.Invoke(user, new object[] { name });
                typeof(User).GetMethod("SetEmail", System.Reflection.BindingFlags.NonPublic | System.Reflection.BindingFlags.Instance)!.Invoke(user, new object[] { email });
                typeof(User).GetMethod("SetPassword", System.Reflection.BindingFlags.NonPublic | System.Reflection.BindingFlags.Instance)!.Invoke(user, new object[] { password });
            }
            catch (Exception ex)
            {
                throw new ArgumentException(ex.InnerException?.Message ?? ex.Message);
            }
            return user;
        }

        public bool Delete(Guid id)
        {
            var user = GetById(id);
            if (user == null) return false;
            _users.Remove(user);
            return true;
        }

        public User? Authenticate(string email, string password)
        {
            return _users.FirstOrDefault(u => u.Email.Value == email && u.Password.Value == password);
        }
    }
}
